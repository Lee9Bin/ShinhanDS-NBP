    <script src="../../js/customer/fillter.js" defer></script>
</head>
<body>

{{>layouts/header}}
<table class="table">
    <thead>
    <tr>
        <th scope="col">ID</th>
        <th scope="col">Title</th>
        <th scope="col">Content</th>
    </tr>
    </thead>
    <tbody>
    {{#article}}
        <tr>
            <th>{{id}}</th>
            <td>{{title}}</td>
            <td>{{content}}</td>
        </tr>
    {{/article}}
    </tbody>
</table>
<a href="/articles/{{id}}/edit" class="btn btn-primary">수정하기</a>
<a href="/articles/{{id}}/delete" class="btn btn-danger">삭제하기</a>
<a href="/articles" class="btn btn-primary">목록가기</a>
{{>layouts/footer}}
</body>
