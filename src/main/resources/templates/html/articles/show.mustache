            src="//dapi.kakao.com/v2/maps/sdk.js?appkey=67db8676f9e68a4cfa0568a0cd5a8115"></script>
    <script src="../../js/customer/customer.js" defer></script>
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
